# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Java files
[*.java]
indent_size = 4

# XML files (like pom.xml)
[*.xml]
indent_size = 2

# YAML files (like GitHub workflows)
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Properties files
[*.properties]
indent_size = 2